          },
          "type": "Compose",
          "inputs": "@formatDateTime(utcNow(), 'yyyy-MM-ddTHH:mm:ss.0000000Z')",
          "description": " formatDateTime(utcNow(), 'yyyy-MM-ddTHH:mm:ss.0000000Z')"
