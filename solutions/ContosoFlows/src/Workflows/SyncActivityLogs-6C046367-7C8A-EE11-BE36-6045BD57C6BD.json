                      "operationMetadataId": "8a68d977-77a0-418d-864b-3353840e796d"
                    },
                    "type": "SetVariable",
                    "inputs": {
                      "name": "NextPageUri",
                      "value": "@{null}"
                    }
                  }
                }
              },
              "expression": {
                "contains": [
                  "@body('Parse_JSON_-_Header')",
                  "NextPageUri"
                ]
              },
              "metadata": {
                "operationMetadataId": "4ac61548-f59a-4bc5-bc4b-2802137c79a7"
              },
              "type": "If"
            }
          },
