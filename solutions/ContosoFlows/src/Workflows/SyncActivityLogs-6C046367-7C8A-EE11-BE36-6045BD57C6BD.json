                  "metadata": {
                    "operationMetadataId": "2fdc11e8-e507-47f9-a872-5bd5fd66d5c1"
                  },
                  "type": "Query",
                  "inputs": {
                    "from": "@\r\njson(body('HTTP_-_Get_Content_Blob'))",
                    "where": "@equals(item()?['RecordType'], 21)"
