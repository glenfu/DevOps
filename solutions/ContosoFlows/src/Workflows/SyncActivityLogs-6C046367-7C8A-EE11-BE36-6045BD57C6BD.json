              "inputs": {
                "content": "@outputs('HTTP_-_Get_Content_Blobs')['headers']",
                "schema": {
                  "type": "object",
                  "properties": {
                    "statusCode": {
                      "type": "integer"
                    },
                    "headers": {
                      "type": "object",
                      "properties": {
                        "Pragma": {
